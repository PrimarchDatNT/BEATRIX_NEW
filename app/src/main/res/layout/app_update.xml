<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_f9f9f9"
    android:tag="layout/app_update_0">
    <com.commsource.widget.title.XTitleBar
        android:id="@id/xtb"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <View
        android:id="@id/line"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_below="@id/xtb"
        android:background="@color/color_e6e5e8" />
    <com.commsource.widget.BpScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/line"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:id="@id/ll_layout_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60.0dip"
                android:layout_marginBottom="60.0dip"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@id/app_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/setting_about_logo" />
                <TextView
                    android:id="@id/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/about_logo_top"
                    android:text="@string/app_name"
                    android:textColor="@color/black"
                    android:textSize="20.0dip" />
                <TextView
                    android:id="@id/app_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/color_6d6d72"
                    android:textSize="18.0dip" />
            </LinearLayout>
            <LinearLayout
                android:id="@id/ll_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@id/btn_setting_license"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@color/white"
                    android:drawableRight="@drawable/arrow_right_icon_gray"
                    android:gravity="start|center"
                    android:paddingStart="15.0dip"
                    android:paddingEnd="15.0dip"
                    android:text="@string/setting_about_license"
                    android:textColor="@color/color_333333"
                    android:textSize="16.0dip" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:background="@color/color_e6e5e8" />
                <TextView
                    android:id="@id/btn_setting_policy"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@color/white"
                    android:drawableRight="@drawable/arrow_right_icon_gray"
                    android:gravity="start|center"
                    android:paddingStart="15.0dip"
                    android:paddingEnd="15.0dip"
                    android:text="@string/home_user_protocol"
                    android:textColor="@color/color_333333"
                    android:textSize="16.0dip" />
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:background="@color/color_e6e5e8" />
                <TextView
                    android:id="@id/btn_terms_of_service"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@color/white"
                    android:drawableRight="@drawable/arrow_right_icon_gray"
                    android:gravity="start|center"
                    android:paddingStart="15.0dip"
                    android:paddingEnd="15.0dip"
                    android:text="@string/home_terms_of_service"
                    android:textColor="@color/color_333333"
                    android:textSize="16.0dip" />
                <View
                    android:id="@id/v_ccpa_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:background="@color/color_e6e5e8" />
                <TextView
                    android:id="@id/btn_ccpa"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@color/white"
                    android:drawableRight="@drawable/arrow_right_icon_gray"
                    android:gravity="start|center"
                    android:paddingStart="15.0dip"
                    android:paddingEnd="15.0dip"
                    android:text="@string/setting_ccpa"
                    android:textColor="@color/color_333333"
                    android:textSize="16.0dip" />
                <View
                    android:id="@id/line_personal_info"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_marginLeft="15.0dip"
                    android:layout_marginRight="15.0dip"
                    android:background="@color/color_e6e5e8"
                    android:visibility="gone" />
                <TextView
                    android:id="@id/tv_personal_info"
                    style="@style/selectable_item"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableRight="@drawable/arrow_right_icon_gray"
                    android:gravity="start|center"
                    android:padding="15.0dip"
                    android:text="@string/delete_my_data"
                    android:textColor="@color/color_333333"
                    android:textSize="16.0dip"
                    android:visibility="gone" />
            </LinearLayout>
            <TextView
                android:id="@id/copyright_zh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30.0dip"
                android:layout_marginBottom="6.0dip"
                android:gravity="center"
                android:text="@string/setting_about_company"
                android:textColor="@color/color_6d6d72"
                android:textSize="14.0dip" />
            <TextView
                android:id="@id/tv_collaborator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="50.0dip"
                android:layout_marginRight="50.0dip"
                android:layout_marginBottom="30.0dip"
                android:gravity="center"
                android:text="@string/strategical_collaborator"
                android:textColor="@color/color_6d6d72"
                android:textSize="12.5dip" />
        </LinearLayout>
    </com.commsource.widget.BpScrollView>
</RelativeLayout>