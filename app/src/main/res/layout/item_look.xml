            app:left_top_round="true"
            app:right_bottom_round="false"
            app:right_top_round="true"
            app:round_radius="4.0dip" />
        <FrameLayout
            android:id="@id/fl_select"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip">
