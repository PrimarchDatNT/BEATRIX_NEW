<?xml version="1.0" encoding="utf-8"?>
<com.meitu.ratiorelativelayout.RatioRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipChildren="false"
    app:adaptType="fitY"
    app:layout_heightSpec="1920.0"
    app:layout_widthSpec="1080.0">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/iv_hwbusiness_ad_bottom_view">
        <com.meitu.hwbusinesskit.core.widget.AdvertBackgroundView
            android:id="@id/iv_hwbusiness_ad_background"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@id/rl_hwbusiness_ad_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:aspectRatio="1"
        app:layout_ratioMarginTop="219.0"
        app:layout_ratioWidth="173.0">
        <com.commsource.widget.CircleImageView
            android:id="@id/iv_hwbusiness_ad_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:aspectRatio="1"
            app:layout_ratioWidth="173.0"
            app:round_radius="10.0dip" />
    </RelativeLayout>
    <TextView
        android:id="@id/tv_hwbusiness_ad_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_hwbusiness_ad_icon"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:paddingBottom="5.0dip"
        android:textColor="@color/color_4b4b4b"
        android:textSize="18.0dip"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_ratioMarginTop="50.0"
        app:layout_ratioWidth="960.0" />
    <com.commsource.widget.ShadowImageView
        android:id="@id/iv_hwbusiness_ad_shadow_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hwbusiness_ad_title"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        app:aspectRatio="1.75"
        app:layout_ratioMarginTop="0.0"
        app:layout_ratioWidth="1060.0"
        app:shadowColor="@color/color_dedede"
        app:shadowRadius="30" />
    <com.meitu.hwbusinesskit.core.widget.AdvertCoverView
        android:id="@id/iv_hwbusiness_ad_cover"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hwbusiness_ad_title"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:scaleType="centerCrop"
        app:aspectRatio="1.9"
        app:layout_ratioMarginTop="50.0"
        app:layout_ratioWidth="960.0"
        app:mthwb_fitScaleType="fitCropStart" />
    <com.google.android.gms.ads.formats.MediaView
        android:id="@id/mv_hwbusiness_ad_google_video"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hwbusiness_ad_title"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        app:aspectRatio="1.9"
        app:layout_ratioMarginTop="50.0"
        app:layout_ratioWidth="960.0" />
    <View
        android:id="@id/iv_hwbusiness_ad_platform_choice"
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:layout_alignTop="@id/iv_hwbusiness_ad_cover"
        android:layout_alignEnd="@id/iv_hwbusiness_ad_cover"
        android:layout_alignRight="@id/iv_hwbusiness_ad_cover"
        android:layout_marginTop="5.0dip"
        android:layout_marginEnd="5.0dip"
        android:layout_marginRight="5.0dip" />
    <TextView
        android:id="@id/tv_hwbusiness_ad_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_hwbusiness_ad_cover"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="13.0dip"
        android:visibility="gone"
        app:layout_ratioMarginTop="50.0"
        app:layout_ratioWidth="960.0" />
    <TextureView
        android:id="@id/tv_hwbusiness_ad_video"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <TextView
        android:id="@id/tv_hwbusiness_ad_next"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hwbusiness_ad_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/launch_ad_cta_btn_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15.0dip"
        android:visibility="gone"
        app:layout_ratioHeight="140.0"
        app:layout_ratioMarginTop="50.0"
        app:layout_ratioWidth="960.0" />
    <ImageView
        android:id="@id/iv_hwbusiness_ad_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/common_ad_full_icon"
        android:visibility="invisible" />
    <RelativeLayout
        android:id="@id/rl_hwbusiness_facebook_ad_platform_choice"
        android:layout_width="20.0dip"
        android:layout_height="20.0dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5.0dip"
        android:layout_marginRight="5.0dip" />
    <ImageView
        android:id="@id/iv_hwbusiness_ad_bottom_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:scaleType="centerInside"
        android:src="@drawable/common_start_up_logo_advert_bottom_img"
        android:visibility="gone"
        app:layout_ratioHeight="315.0" />
</com.meitu.ratiorelativelayout.RatioRelativeLayout>