        android:id="@id/click_hand"
        android:layout_width="74.0dip"
        android:layout_height="87.0dip"
        android:layout_alignLeft="@id/doodleItem"
        android:layout_alignTop="@id/doodleItem"
        android:src="@drawable/edit_click_hand_img"
        android:translationX="45.0dip"
        android:translationY="44.0dip"
        android:visibility="gone" />
    <com.commsource.widget.AutoFitTextView
        android:id="@id/doodle_long_press"
        android:layout_width="wrap_content"
        android:layout_height="25.0dip"
        android:layout_above="@id/doodleItem"
        android:layout_marginStart="-25.0dip"
        android:layout_marginEnd="2.0dip"
        android:layout_marginBottom="-10.0dip"
        android:layout_toEndOf="@id/doodleItem"
        android:alpha="0.0"
        android:gravity="center"
