                android:layout_height="16.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_marginTop="5.0dip"
                android:alpha="0.0"
                android:text="@string/if_doodle_collect"
                android:textColor="@color/color_fb5986"
                android:textSize="16.0dip"
                android:visibility="gone" />
        </FrameLayout>
    </FrameLayout>
    <ImageView
        android:id="@id/doodle_ripple"
        android:layout_width="24.0dip"
        android:layout_height="24.0dip"
        android:layout_below="@id/doodleItem"
        android:layout_marginStart="-27.0dip"
        android:layout_marginTop="-28.0dip"
        android:layout_toEndOf="@id/doodleItem"
        android:src="@drawable/edit_collect_click_ripple_icon"
