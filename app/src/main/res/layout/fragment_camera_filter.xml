<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:tag="layout/fragment_camera_filter_0">
    <LinearLayout
        android:id="@id/ll_filter_category_tab"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:orientation="horizontal">
        <com.commsource.widget.round.RoundFrameLayout
            android:id="@id/rfl_back"
            android:layout_width="34.0dip"
            android:layout_height="34.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8.0dip"
            android:alpha="1.0"
            app:rv_isRadiusHalfHeight="true"
            app:rv_isRippleEnable="false">
            <com.commsource.widget.IconFrontView
                android:id="@id/ifv_back"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:alpha="0.8"
                android:gravity="center"
                android:text="@string/if_camera_filter_category_back"
                android:textColor="@color/color_333333"
                android:textSize="24.0dip" />
        </com.commsource.widget.round.RoundFrameLayout>
        <com.commsource.camera.widget.NestedScrollHLinearLayout
            android:id="@id/nll_filter_category_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <com.commsource.camera.xcamera.cover.bottomFunction.effect.filter.category.FadingEdgeRecyclerView
                android:id="@id/rv_group"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fadingEdgeLength="20.0dip"
                android:overScrollMode="never"
                android:requiresFadingEdge="horizontal" />
        </com.commsource.camera.widget.NestedScrollHLinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@id/vRlContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50.0dip">
        <com.commsource.camera.widget.ClipRelativeLayout
            android:id="@id/vCrlFilterListContainer"
            android:layout_width="fill_parent"
            android:layout_height="88.0dip"
            android:layout_centerInParent="true">
            <com.commsource.camera.widget.NestedScrollHLinearLayout
                android:id="@id/vNLlFilterListContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@id/rv_child"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clipChildren="false"
                    android:overScrollMode="never" />
            </com.commsource.camera.widget.NestedScrollHLinearLayout>
        </com.commsource.camera.widget.ClipRelativeLayout>
        <FrameLayout
            android:id="@id/vFlFavoriteTips"
            android:layout_width="30.0dip"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/vCrlFilterListContainer"
            android:layout_alignBottom="@id/vCrlFilterListContainer"
            android:visibility="gone">
            <ImageView
                android:id="@id/iv_left_collect"
                android:layout_width="30.0dip"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:src="@drawable/selfie_filter_collect_icon"
                android:text="@string/if_doodle_collect"
                android:visibility="visible" />
        </FrameLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@id/vLlBottomFavorite"
        android:layout_width="wrap_content"
        android:layout_height="40.0dip"
        android:layout_gravity="end|bottom|center"
        android:layout_marginEnd="30.0dip"
        android:orientation="vertical">
        <com.commsource.widget.IconFrontView
            android:id="@id/vIfvBottomFavorite"
            android:layout_width="24.0dip"
            android:layout_height="24.0dip"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/if_camera_filter_normal"
            android:textSize="24.0dip" />
        <TextView
            android:id="@id/vTvBottomFavorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/collect_filter"
            android:textSize="10.0dip" />
    </LinearLayout>
    <FrameLayout
        android:id="@id/vLlBottomShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|bottom|center"
        android:layout_marginStart="30.0dip"
        android:clipChildren="false"
        android:orientation="vertical">
        <ImageView
            android:id="@id/iv_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center|left"
            android:layout_marginTop="6.0dip"
            android:src="@drawable/selfie_panel_img_store_default" />
        <ImageView
            android:id="@id/iv_new_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25.0dip"
            android:src="@drawable/corner_store_new" />
    </FrameLayout>
</FrameLayout>