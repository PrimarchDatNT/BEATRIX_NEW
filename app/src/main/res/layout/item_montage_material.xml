<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@id/common_material_container"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:background="@drawable/montage_material_item_select"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.commsource.widget.SelectImageView
            android:id="@id/ai_and_adjust"
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:layout_centerInParent="true" />
        <ImageView
            android:id="@id/montage_material_icon"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10.0dip" />
        <ImageView
            android:id="@id/montage_red_dot"
            android:layout_width="5.0dip"
            android:layout_height="5.0dip"
            android:layout_alignTop="@id/montage_material_icon"
            android:layout_alignEnd="@id/montage_material_icon"
            android:background="@drawable/red_bg_radius_5dp"
            android:visibility="gone" />
        <ImageView
            android:id="@id/montage_ai_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/selfie_montage_ai_icon" />
        <ImageView
            android:id="@id/montage_download_icon"
            android:layout_width="13.0dip"
            android:layout_height="13.0dip"
            android:layout_alignEnd="@id/montage_material_icon"
            android:layout_alignBottom="@id/montage_material_icon"
            android:layout_marginEnd="-6.5dip"
            android:layout_marginBottom="-6.5dip"
            android:src="@drawable/common_download_icon_circle_black" />
        <ImageView
            android:id="@id/montage_paid_icon"
            android:layout_width="18.0dip"
            android:layout_height="18.0dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3.0dip"
            android:layout_marginRight="3.0dip"
            android:src="@drawable/common_corner_premium_white"
            android:visibility="gone" />
        <com.commsource.widget.CircleDownloadProgressView
            android:id="@id/montage_download_progress"
            android:layout_width="18.0dip"
            android:layout_height="18.0dip"
            android:layout_alignEnd="@id/montage_material_icon"
            android:layout_alignBottom="@id/montage_material_icon"
            android:visibility="gone"
            app:cdpvCircleColor="@color/color_6a6a6b"
            app:cdpvCircleRadius="9.0dip"
            app:cdpvMaskCircleColor="@color/color_4d6a6a6b"
            app:cdpvMaskColor="@color/color_b3ffffff" />
    </RelativeLayout>
    <FrameLayout
        android:id="@id/skin_material_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/montage_skin_item_select"
        android:padding="1.5dip"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@id/skin_material_icon"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>