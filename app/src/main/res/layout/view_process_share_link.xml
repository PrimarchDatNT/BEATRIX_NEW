<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:tag="layout/view_process_share_link_0">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/loading_container"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15.0dip"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/process_prompt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8">
        <TextView
            android:id="@id/loadingPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:text="Loading..."
            android:textColor="@color/color_fb5986"
            android:textSize="12.0sp"
            app:layout_constraintBottom_toTopOf="@id/progressBar_container"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="@id/progressBar_container"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@id/progress_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:text="0%"
            android:textColor="@color/color_fb5986"
            android:textSize="12.0sp"
            app:layout_constraintBottom_toTopOf="@id/progressBar_container"
            app:layout_constraintRight_toRightOf="@id/progressBar_container"
            app:layout_constraintTop_toTopOf="parent" />
        <RelativeLayout
            android:id="@id/progressBar_container"
            android:layout_width="fill_parent"
            android:layout_height="18.0dip"
            android:layout_centerHorizontal="true"
            app:layout_constraintBottom_toBottomOf="parent">
            <View
                android:layout_width="fill_parent"
                android:layout_height="13.0dip"
                android:background="@drawable/share_link_progressbar_bg" />
            <ProgressBar
                android:id="@id/process_progress"
                style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                android:layout_width="fill_parent"
                android:layout_height="18.0dip"
                android:progress="0"
                android:progressDrawable="@drawable/dialog_share_link_style" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/share_container"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15.0dip"
        app:layout_constraintBottom_toTopOf="@id/process_prompt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8">
        <TextView
            android:id="@id/share_this"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_20_fb5986"
            android:gravity="center"
            android:paddingLeft="10.0dip"
            android:paddingTop="8.0dip"
            android:paddingRight="10.0dip"
            android:paddingBottom="8.0dip"
            android:text="@string/share_this_image"
            android:textColor="@color/white"
            android:textSize="12.0sp"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/share_more"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.4" />
        <TextView
            android:id="@id/share_more"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:background="@drawable/radiu_20_white_fb5986"
            android:gravity="center"
            android:paddingLeft="10.0dip"
            android:paddingTop="8.0dip"
            android:paddingRight="10.0dip"
            android:paddingBottom="8.0dip"
            android:text="@string/share_some_image"
            android:textColor="@color/color_fb5986"
            android:textSize="12.0sp"
            app:layout_constraintLeft_toRightOf="@id/share_this"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.4" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@id/copy_link"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15.0dip"
        android:background="@drawable/share_link_copy_bg"
        android:gravity="center"
        android:paddingTop="10.0dip"
        android:paddingBottom="10.0dip"
        android:text="@string/copy_link"
        android:textColor="@color/white"
        android:textSize="16.0sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/process_prompt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8" />
    <com.commsource.widget.AutoFitTextView
        android:id="@id/process_prompt"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15.0dip"
        android:gravity="center"
        android:lineSpacingExtra="5.0dip"
        android:maxLines="3"
        android:text="@string/share_link_prompt1"
        android:textColor="@color/color_333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.75" />
</androidx.constraintlayout.widget.ConstraintLayout>