<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/selectable_item"
    android:layout_width="fill_parent"
    android:layout_height="70.0dip"
    android:paddingTop="5.0dip"
    android:tag="layout/album_list_item_0">
    <ImageView
        android:id="@id/album_dir_thumb"
        android:layout_width="60.0dip"
        android:layout_height="60.0dip"
        android:layout_marginLeft="5.0dip"
        android:layout_marginRight="15.0dip"
        android:scaleType="centerCrop"
        android:src="@drawable/edit_album_placeholder" />
    <TextView
        android:id="@id/album_dir_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/album_dir_thumb"
        android:maxEms="10"
        android:singleLine="true"
        android:text="@string/album_dir_name"
        android:textColor="@android:color/black"
        android:textSize="18.0dip" />
    <TextView
        android:id="@id/album_dir_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/album_dir_name"
        android:layout_alignLeft="@id/album_dir_name"
        android:ellipsize="end"
        android:lines="2"
        android:paddingLeft="2.0dip"
        android:paddingRight="20.0dip"
        android:text="@string/album_dir_path"
        android:textColor="@android:color/darker_gray"
        android:textSize="12.0dip" />
    <TextView
        android:id="@id/album_dir_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/album_dir_name"
        android:layout_marginLeft="5.0dip"
        android:layout_toRightOf="@id/album_dir_name"
        android:paddingBottom="2.0dip"
        android:singleLine="true"
        android:text="@string/album_dir_item_num"
        android:textColor="@android:color/darker_gray"
        android:textSize="13.0dip" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_alignParentBottom="true"
        android:background="@color/color_1a000000" />
</RelativeLayout>