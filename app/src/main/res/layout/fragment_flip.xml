<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:tag="layout/fragment_flip_0">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom"
        android:tag="binding_1">
        <LinearLayout
            android:id="@id/flip_x_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/confirm_cancel"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/flip_y_container"
            app:layout_constraintTop_toTopOf="parent">
            <com.commsource.widget.IconFrontView
                android:id="@id/flip_x"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:gravity="center"
                android:text="@string/if_edit_flip_x"
                android:textColor="@color/color_333333"
                android:textSize="24.0dip" />
            <TextView
                android:id="@id/flip_x_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:gravity="center"
                android:text="@string/t_horizontal"
                android:textColor="@color/color_333333"
                android:textSize="11.0dip"
                app:layout_constraintLeft_toLeftOf="@id/flip_x"
                app:layout_constraintRight_toRightOf="@id/flip_x"
                app:layout_constraintTop_toBottomOf="@id/flip_x" />
        </LinearLayout>
        <LinearLayout
            android:id="@id/flip_y_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80.0dip"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/confirm_cancel"
            app:layout_constraintLeft_toRightOf="@id/flip_x_container"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.commsource.widget.IconFrontView
                android:id="@id/flip_y"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:gravity="center"
                android:text="@string/if_edit_flip_y"
                android:textColor="@color/color_333333"
                android:textSize="24.0dip" />
            <TextView
                android:id="@id/flip_y_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:gravity="center"
                android:text="@string/t_vertical"
                android:textColor="@color/color_333333"
                android:textSize="11.0dip" />
        </LinearLayout>
        <com.commsource.studio.component.ConfirmCancelComponent
            android:id="@id/confirm_cancel"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:tag="binding_2"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>