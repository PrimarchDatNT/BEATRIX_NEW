<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:tag="layout/layout_mini_grid_0">
    <androidx.cardview.widget.CardView
        android:id="@id/cv_bg"
        android:layout_width="162.0dip"
        android:layout_height="162.0dip"
        app:aspectRatio="1"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10.0dip"
        app:cardElevation="0.0dip"
        app:cardPreventCornerOverlap="false">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="?selectableItemBackgroundBorderless">
            <ImageView
                android:id="@id/iv_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:src="@drawable/common_download_icon_circle_black"
                android:visibility="gone" />
            <com.commsource.widget.CircleDownloadProgressView
                android:id="@id/pb"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="10.0dip"
                android:visibility="gone"
                app:cdpvCircleColor="@color/color_fb5986"
                app:cdpvCircleRadius="9.0dip"
                app:cdpvCircleStrokeWidth="3.0dip"
                app:cdpvMaskCircleColor="@color/color_50cccccc"
                app:cdpvMaskColor="@color/white"
                app:cdpvMatchScale="0.9" />
            <ImageView
                android:id="@id/iv_icon"
                android:layout_width="48.0dip"
                android:layout_height="48.0dip"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/mini_margin_20dp"
                android:layout_marginTop="38.0dip" />
            <View
                android:id="@id/iv_new_feature"
                android:layout_width="10.0dip"
                android:layout_height="10.0dip"
                android:layout_alignTop="@id/iv_icon"
                android:layout_alignRight="@id/iv_icon"
                android:layout_marginTop="-3.0dip"
                android:layout_marginRight="-3.0dip"
                android:background="@drawable/miniapp_icon_reddot"
                android:visibility="visible" />
            <com.commsource.widget.AutoFitTextView
                android:id="@id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_icon"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1.0"
                android:gravity="center"
                android:maxLines="2"
                android:textColor="@color/color_666666"
                android:textSize="14.0dip"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>