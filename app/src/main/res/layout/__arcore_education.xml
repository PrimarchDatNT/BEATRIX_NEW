<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical">
    <TextView
        android:id="@id/__arcore_messageText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="24.0dip"
        android:text="@string/__arcore_install_app" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="4.0dip">
        <Button
            android:id="@id/__arcore_cancelButton"
            style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/__arcore_cancel" />
        <Button
            android:id="@id/__arcore_continueButton"
            style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/__arcore_continue" />
    </LinearLayout>
</android.widget.LinearLayout>