<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="76.0dip"
    android:layout_height="54.0dip">
    <ImageView
        android:id="@id/ivThumb"
        android:layout_width="54.0dip"
        android:layout_height="54.0dip"
        android:layout_gravity="center" />
    <View
        android:id="@id/vSelected"
        android:layout_width="54.0dip"
        android:layout_height="54.0dip"
        android:layout_gravity="center"
        android:background="@drawable/shape_ring_selected"
        android:visibility="gone" />
    <ImageView
        android:id="@id/ivDownload"
        android:layout_width="16.0dip"
        android:layout_height="16.0dip"
        android:layout_gravity="bottom|center|right"
        android:layout_marginRight="11.0dip"
        android:src="@drawable/common_download_icon_circle_black"
        android:visibility="gone" />
    <com.commsource.widget.RotateLoadingView
        android:id="@id/rlv"
        android:layout_width="16.0dip"
        android:layout_height="16.0dip"
        android:layout_gravity="bottom|center|right"
        android:layout_marginRight="11.0dip"
        android:background="@drawable/edit_loading_bg_icon"
        android:visibility="gone" />
    <ImageView
        android:id="@id/ivPayMark"
        android:layout_width="15.0dip"
        android:layout_height="15.0dip"
        android:layout_gravity="right"
        android:layout_marginRight="2.5dip"
        android:src="@drawable/common_corner_premium_white"
        android:visibility="visible" />
</FrameLayout>