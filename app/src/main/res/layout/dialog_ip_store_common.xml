<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_common_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20.0dip">
    <TextView
        android:id="@id/common_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9.0dip"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textSize="18.0dip"
        android:textStyle="bold" />
    <TextView
        android:id="@id/common_dialog_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:layout_marginTop="14.0dip"
        android:layout_marginRight="8.0dip"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="10"
        android:textColor="@android:color/black"
        android:textSize="14.0dip" />
    <TextView
        android:id="@id/common_dialog_btn"
        android:layout_width="180.0dip"
        android:layout_height="50.0dip"
        android:layout_marginTop="32.0dip"
        android:background="@drawable/shape_dialog_common_btn"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="15.0sp" />
    <TextView
        android:id="@id/common_dialog_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.0dip"
        android:ellipsize="end"
        android:lines="1"
        android:singleLine="true"
        android:textColor="#ff1a1a1a"
        android:textSize="14.0sp" />
</LinearLayout>