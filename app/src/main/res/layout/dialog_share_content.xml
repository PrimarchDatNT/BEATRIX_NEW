<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:tag="layout/dialog_share_content_0">
    <RelativeLayout
        android:id="@id/rl_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:animateLayoutChanges="true"
        android:tag="binding_1">
        <com.commsource.widget.PressImageView
            android:id="@id/iv_dismiss"
            android:layout_width="36.0dip"
            android:layout_height="36.0dip"
            android:layout_centerHorizontal="true"
            android:padding="8.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow_down_icon_gray" />
        <com.commsource.widget.BoldTextView
            android:id="@id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_dismiss"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:textColor="@color/Gray_A"
            android:textSize="18.0dip" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/rv_share_option"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="16.0dip"
            android:layout_marginTop="24.0dip"
            android:layout_marginRight="16.0dip"
            android:overScrollMode="never" />
        <RelativeLayout
            android:id="@id/share_platform_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rv_share_option"
            android:clipChildren="false">
            <FrameLayout
                android:id="@id/fl_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@id/rl_ad_container"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/share_ad_margin_left_right"
                    android:layout_marginTop="24.0dip"
                    android:layout_marginRight="@dimen/share_ad_margin_left_right"
                    android:background="@drawable/share_new_bk"
                    android:padding="0.5dip"
                    android:visibility="gone">
                    <RelativeLayout
                        android:id="@id/ll_ad_container"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <com.meitu.hwbusinesskit.core.widget.NativeAdView
                            android:id="@id/csav_ad_view"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="invisible"
                            app:mthwb_advertLayout="@layout/new_share_advert"
                            app:mthwb_main_content_max_aspect="2.1"
                            app:mthwb_main_content_min_aspect="1.91"
                            app:mthwb_setGoneWhenNoIcon="true" />
                        <com.commsource.widget.PressImageView
                            android:id="@id/piv_report_enter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/csav_ad_view"
                            android:layout_alignTop="@id/csav_ad_view"
                            android:paddingRight="20.0dip"
                            android:paddingBottom="20.0dip"
                            android:src="@drawable/common_ad_icon_report" />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@id/rl_default_ad"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24.0dip"
                    android:visibility="gone">
                    <ImageView
                        android:id="@id/iv_default_ad"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16.0dip"
                        android:layout_marginRight="16.0dip"
                        android:gravity="center"
                        android:scaleType="fitXY" />
                </RelativeLayout>
            </FrameLayout>
            <com.commsource.widget.PressTextView
                android:id="@id/tv_home"
                android:layout_width="fill_parent"
                android:layout_height="44.0dip"
                android:layout_below="@id/fl_ad"
                android:layout_marginLeft="16.0dip"
                android:layout_marginTop="24.0dip"
                android:layout_marginRight="16.0dip"
                android:layout_marginBottom="16.0dip"
                android:gravity="center"
                android:tag="binding_2"
                android:text="@string/t_back_home"
                android:textSize="16.0dip" />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:id="@id/btn_dismiss"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/rl_container" />
</RelativeLayout>