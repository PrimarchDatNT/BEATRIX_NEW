<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:tag="layout/item_doodle_layout_0">
    <androidx.cardview.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_gravity="center"
        android:tag="binding_1"
        app:cardCornerRadius="10.0dip"
        app:cardElevation="0.0dip"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@id/ivThumb"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center" />
        <View
            android:id="@id/vSelected"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:tag="binding_2" />
        <ImageView
            android:id="@id/ivPayMark"
            android:layout_width="15.0dip"
            android:layout_height="15.0dip"
            android:layout_gravity="right"
            android:layout_marginTop="2.0dip"
            android:layout_marginRight="2.0dip"
            android:src="@drawable/common_corner_premium_white"
            android:visibility="gone" />
        <ImageView
            android:id="@id/ivColorRing"
            android:layout_width="18.0dip"
            android:layout_height="18.0dip"
            android:layout_gravity="bottom"
            android:layout_marginLeft="1.0dip"
            android:layout_marginBottom="1.0dip"
            android:src="@drawable/edit_color_ring_icon"
            android:visibility="gone" />
        <ImageView
            android:id="@id/doodle_collect"
            android:layout_width="18.0dip"
            android:layout_height="18.0dip"
            android:layout_marginLeft="1.0dip"
            android:layout_marginTop="1.0dip"
            android:src="@drawable/selfie_filter_collect_icon"
            android:visibility="gone" />
        <ImageView
            android:id="@id/ivNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/corner_new_large"
            android:visibility="gone" />
        <ImageView
            android:id="@id/ivDownload"
            android:layout_width="18.0dip"
            android:layout_height="18.0dip"
            android:layout_gravity="bottom|center|right"
            android:scaleType="fitCenter"
            android:src="@drawable/common_download_icon_border_white"
            android:visibility="gone" />
        <com.commsource.widget.RotateLoadingView
            android:id="@id/rlv"
            android:layout_width="18.0dip"
            android:layout_height="18.0dip"
            android:layout_gravity="bottom|center|right"
            android:layout_marginRight="1.7999878dip"
            android:layout_marginBottom="1.7999878dip"
            android:background="@drawable/common_loading_white_rotate_icon"
            android:visibility="gone" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>