<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_dialog_bg"
    android:orientation="vertical">
    <LinearLayout
        android:id="@id/ll_praise_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13.0dip"
        android:layout_marginTop="25.0dip"
        android:layout_marginRight="13.0dip"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:gravity="center"
            android:text="@string/enjoy_beautyplus"
            android:textColor="@color/black"
            android:textSize="20.0dip"
            android:textStyle="bold" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/enjoy"
            android:textColor="@color/color_333333"
            android:textSize="14.0dip" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_praise_text"
        android:layout_marginLeft="25.0dip"
        android:layout_marginRight="25.0dip"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@id/ll_priase_level"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginTop="50.0dip"
            android:layout_marginBottom="33.0dip">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@id/lav_priase_level1"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                app:lottie_imageAssetsFolder="lottie" />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@id/lav_priase_level2"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                app:lottie_imageAssetsFolder="lottie" />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@id/lav_priase_level3"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                app:lottie_imageAssetsFolder="lottie" />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@id/lav_priase_level4"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                app:lottie_imageAssetsFolder="lottie" />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@id/lav_priase_level5"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                app:lottie_imageAssetsFolder="lottie" />
        </LinearLayout>
        <Button
            android:id="@id/bt_submit"
            android:layout_width="fill_parent"
            android:layout_height="45.0dip"
            android:layout_below="@id/ll_priase_level"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16.0dip"
            android:layout_marginRight="16.0dip"
            android:background="@drawable/dialog_submit_button_sel"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/submit"
            android:textColor="@color/dialog_submit_text_color_sel"
            android:textSize="13.0dip" />
        <TextView
            android:id="@id/tv_later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_submit"
            android:layout_centerHorizontal="true"
            android:paddingLeft="16.0dip"
            android:paddingTop="24.0dip"
            android:paddingRight="16.0dip"
            android:paddingBottom="24.0dip"
            android:text="@string/skip"
            android:textColor="@color/color_999999"
            android:textSize="13.0dip" />
    </RelativeLayout>
</RelativeLayout>