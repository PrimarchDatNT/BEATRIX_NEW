<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_222222"
    android:tag="layout/layout_sub_state_0">
    <ImageView
        android:id="@id/iv_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/premium_img_bg_diamond" />
    <ImageView
        android:id="@id/ivClose"
        android:layout_width="42.0dip"
        android:layout_height="42.0dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10.0dip"
        android:padding="6.0dip"
        android:src="@drawable/premium_icon_close" />
    <RelativeLayout
        android:id="@id/rl_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25.0dip"
        android:layout_marginRight="25.0dip">
        <ImageView
            android:id="@id/ivBackGround"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@id/ll_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40.0dip"
            android:orientation="vertical"
            android:paddingLeft="24.0dip"
            android:paddingRight="24.0dip">
            <com.commsource.widget.AutoFitTextView
                android:id="@id/tv_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="20.0dip"
                android:textStyle="bold" />
            <TextView
                android:id="@id/tv_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:textColor="@color/white"
                android:textSize="16.0dip" />
        </LinearLayout>
        <LinearLayout
            android:id="@id/ll_sub_feature"
            android:layout_width="fill_parent"
            android:layout_height="90.0dip"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12.5dip"
            android:paddingRight="12.5dip">
            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <com.commsource.widget.BoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100+"
                    android:textColor="@color/color_80ffffff"
                    android:textSize="25.0dip"
                    app:boldTextWidth="1.0" />
                <com.commsource.widget.BoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/t_filters"
                    android:textColor="@color/color_80ffffff"
                    android:textSize="15.0dip"
                    app:boldTextWidth="1.0" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <com.commsource.widget.BoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10+"
                    android:textColor="@color/color_80ffffff"
                    android:textSize="25.0dip"
                    app:boldTextWidth="1.0" />
                <com.commsource.widget.BoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/t_tools"
                    android:textColor="@color/color_80ffffff"
                    android:textSize="15.0dip" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <com.commsource.widget.BoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/color_80ffffff"
                    android:textSize="25.0dip"
                    app:boldTextWidth="1.0" />
                <com.commsource.widget.BoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ads"
                    android:textColor="@color/color_80ffffff"
                    android:textSize="15.0dip"
                    app:boldTextWidth="1.0" />
            </LinearLayout>
        </LinearLayout>
        <com.commsource.widget.PressAutoFitTextView
            android:id="@id/tvUpdatePayment"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_above="@id/ll_sub_feature"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginBottom="24.0dip"
            android:gravity="center"
            android:text="@string/t_update_payment"
            android:textColor="@color/black"
            android:textSize="16.0dip"
            app:strokeTextSize="0.8" />
    </RelativeLayout>
</RelativeLayout>