<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30.0dip"
            android:layout_marginRight="30.0dip"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20.0dip">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@id/main_content_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24.0dip">
                    <TextView
                        android:id="@id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15.0dip"
                        android:gravity="left"
                        android:maxLines="2"
                        android:textColor="@color/color_262626"
                        android:textSize="20.0dip"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@id/subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15.0dip"
                        android:gravity="left"
                        android:textColor="@color/color_262626"
                        android:textSize="16.0dip" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@id/recycle_permission_list"
                        android:layout_width="fill_parent"
                        android:layout_height="260.0dip"
                        android:clipToPadding="false"
                        android:paddingLeft="2.0dip"
                        android:paddingRight="2.0dip"
                        android:scrollbarSize="3.0dip"
                        android:scrollbarThumbVertical="@drawable/scroll_vertical"
                        android:scrollbars="vertical"
                        android:visibility="gone" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="24.0dip"
                    android:paddingBottom="16.0dip">
                    <Button
                        android:id="@id/btn_positive"
                        android:layout_width="wrap_content"
                        android:layout_height="36.0dip"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/common_ripple_bound_sel"
                        android:paddingLeft="16.0dip"
                        android:paddingRight="16.0dip"
                        android:text="@string/permission_btn_text"
                        android:textColor="@color/color_fb5986"
                        android:textSize="16.0dip" />
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</RelativeLayout>