<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:tag="layout/fragment_ar_giphy_material_0">
    <LinearLayout
        android:id="@id/ar_giphy_rl"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/black70"
        android:clickable="true"
        android:orientation="vertical">
        <com.commsource.widget.PressImageView
            android:id="@id/iv_close"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_gravity="center"
            android:layout_marginTop="7.0dip"
            android:layout_marginBottom="7.0dip"
            android:paddingLeft="8.5dip"
            android:paddingRight="8.5dip"
            android:src="@drawable/arrow_down_icon_gray" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">
            <com.commsource.widget.round.RoundLinearLayout
                android:layout_width="0.0dip"
                android:layout_height="35.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_weight="1.0"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:rv_backgroundColor="@color/color_66000000"
                app:rv_isRadiusHalfHeight="true"
                app:rv_isRippleEnable="false">
                <com.commsource.widget.IconFrontView
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:gravity="center"
                    android:text="@string/if_ar_search"
                    android:textColor="@color/white"
                    android:textSize="25.0dip" />
                <View
                    android:layout_width="0.5dip"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginBottom="10.0dip"
                    android:background="@color/color_80ffffff" />
                <EditText
                    android:id="@id/et"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/search_giphy"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/color_80ffffff"
                    android:textCursorDrawable="@drawable/shape_cursor"
                    android:textSize="13.0dip" />
            </com.commsource.widget.round.RoundLinearLayout>
            <com.commsource.widget.PressTextView
                android:id="@id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:text="@string/cancel"
                android:textColor="@color/white"
                android:textSize="13.0dip" />
        </LinearLayout>
        <TextView
            android:id="@id/ar_giphy_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.5dip"
            android:layout_marginTop="20.0dip"
            android:layout_marginBottom="8.5dip"
            android:text="@string/hot_search"
            android:textColor="@color/white"
            android:textSize="13.0sp" />
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0">
            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@id/refresh"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:alpha="0.0"
                app:srlEnableRefresh="false">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@id/rv"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:overScrollMode="never" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
            <ProgressBar
                android:id="@id/pb_refresh"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_gravity="center"
                android:layout_marginTop="25.0dip"
                android:layout_marginBottom="25.0dip"
                android:alpha="1.0"
                android:indeterminateDrawable="@drawable/progress_filter_center_loading_more" />
            <com.commsource.widget.AutoFitTextView
                android:id="@id/tv_empty"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:alpha="0.0"
                android:clickable="false"
                android:duplicateParentState="false"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="15.0dip"
                android:paddingRight="15.0dip"
                android:text="@string/ar_search_empty"
                android:textColor="@color/white50"
                android:textSize="13.0dip" />
        </FrameLayout>
        <ImageView
            android:layout_width="100.0dip"
            android:layout_height="11.0dip"
            android:layout_gravity="center"
            android:layout_marginBottom="20.0dip"
            android:scaleType="fitCenter"
            android:src="@drawable/selfie_giphy_icon_logo" />
    </LinearLayout>
</FrameLayout>