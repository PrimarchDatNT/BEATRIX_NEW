<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:tag="layout/fragment_help_selfie_confirm_0">
    <ImageView
        android:id="@id/confirm_image"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@id/bottom_bg"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirm_image"
        app:layout_constraintVertical_weight="1.0" />
    <com.commsource.helpcapture.HelpSelfieAnchorView
        android:id="@id/anchor_view"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@id/confirm_func_vertical"
        android:layout_width="wrap_content"
        android:layout_height="60.0dip"
        android:background="@drawable/shape_help_selfie_confirm"
        android:drawableEnd="@drawable/arrow_right_icon_black"
        android:drawablePadding="10.0dip"
        android:gravity="center"
        android:paddingLeft="25.0dip"
        android:paddingRight="25.0dip"
        android:text="@string/ask_to_help_selfie"
        android:textColor="@color/black"
        android:textSize="16.0dip"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/bottom_bg"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="@id/bottom_bg"
        app:layout_constraintRight_toRightOf="@id/bottom_bg"
        app:layout_constraintTop_toTopOf="@id/bottom_bg" />
    <TextView
        android:id="@id/confirm_func_hor"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/arrow_right_help_selfie_confirm_icon"
        android:drawablePadding="10.0dip"
        android:gravity="center"
        android:paddingStart="15.0dip"
        android:paddingEnd="15.0dip"
        android:text="@string/ask_to_help_selfie"
        android:textColor="@color/white"
        android:textSize="16.0dip"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/bottom_bg"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="@id/bottom_bg"
        app:layout_constraintRight_toRightOf="@id/bottom_bg"
        app:layout_constraintTop_toTopOf="@id/bottom_bg"
        app:layout_constraintWidth_percent="0.3" />
    <TextView
        android:id="@id/confirm_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20.0dip"
        android:layout_marginTop="30.0dip"
        android:layout_marginEnd="20.0dip"
        android:background="@drawable/miniapp_help_selfie_toast_bg_icon"
        android:paddingStart="10.0dip"
        android:paddingTop="7.5dip"
        android:paddingEnd="10.0dip"
        android:paddingBottom="7.5dip"
        android:text="@string/pls_click_help_selfie_btn"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.commsource.widget.IconFrontView
        android:id="@id/mIvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12.0dip"
        android:layout_marginTop="12.0dip"
        android:gravity="center"
        android:shadowColor="@color/color_60000000"
        android:shadowRadius="8.0"
        android:text="@string/if_left_camera"
        android:textColor="@color/white"
        android:textSize="35.0dip"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:usePressState="true" />
</androidx.constraintlayout.widget.ConstraintLayout>