<?xml version="1.0" encoding="utf-8"?>
<com.meitu.ratiorelativelayout.RatioRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:tag="layout/fragment_studio_relight_0">
    <FrameLayout
        android:id="@id/fl_bottom"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:tag="binding_1">
        <com.meitu.ratiorelativelayout.RatioRelativeLayout
            android:id="@id/rl_auto"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="40.0dip">
            <com.commsource.widget.XSeekBar
                android:id="@id/xsb_auto"
                android:layout_width="fill_parent"
                android:layout_height="35.0dip"
                android:layout_centerInParent="true"
                android:layout_gravity="bottom"
                android:layout_marginLeft="35.0dip"
                android:layout_marginRight="35.0dip"
                android:visibility="visible"
                app:isEnableStroke="false"
                app:xBackgroundColor="@color/color_e5e5e5"
                app:xProgressColor="@color/black" />
        </com.meitu.ratiorelativelayout.RatioRelativeLayout>
        <com.commsource.studio.component.FreeUseTimesComponent
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="60.0dip"
            android:tag="binding_2" />
        <com.commsource.studio.component.ConfirmCancelComponent
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:tag="binding_3" />
    </FrameLayout>
    <com.commsource.studio.component.PreviewComponent
        android:id="@id/preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/fl_bottom"
        android:layout_toLeftOf="@id/contrast"
        android:paddingLeft="14.0dip"
        android:paddingTop="14.0dip"
        android:paddingBottom="14.0dip"
        android:tag="binding_4" />
    <com.commsource.studio.component.ContrastComponent
        android:id="@id/contrast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/fl_bottom"
        android:layout_alignParentRight="true"
        android:padding="14.0dip"
        android:tag="binding_5" />
    <com.commsource.widget.part.XSeekBubbleView
        android:id="@id/xbv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/fl_bottom"
        android:layout_marginLeft="35.0dip"
        android:tag="binding_6" />
    <RelativeLayout
        android:id="@id/rl_user_guide"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/black50"
        android:outlineProvider="none"
        android:tag="binding_7"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageView
                android:id="@id/iv_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/selfie_light_source_icon" />
            <ImageView
                android:id="@id/iv_light_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_light"
                android:src="@drawable/selfie_light_guide_icon" />
            <TextView
                android:id="@id/tv_light_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_light_guide"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="44.0dip"
                android:text="@string/beauty_light_guide_tip"
                android:textColor="@color/white"
                android:textSize="15.0dip" />
        </RelativeLayout>
    </RelativeLayout>
</com.meitu.ratiorelativelayout.RatioRelativeLayout>