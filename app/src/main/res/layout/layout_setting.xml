            <com.commsource.widget.IconFrontView
                android:id="@id/ifv_count_down"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/selfie_setting_icon_time_off"
                android:textColor="@color/color_333333"
                android:textSize="35.0dip" />
            <com.commsource.widget.IconFrontView
                android:id="@id/ifv_touch_capture"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/selfie_setting_icon_snap_off"
                android:textColor="@color/color_333333"
                android:textSize="35.0dip" />
            <com.commsource.widget.IconFrontView
                android:id="@id/ifv_setting"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/selfie_setting_icon_more"
                android:textColor="@color/color_333333"
                android:textSize="35.0dip"
                app:usePressState="true" />
        </LinearLayout>
        <View
            android:id="@id/v_line"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="-1.0dip"
            android:layout_marginRight="20.0dip"
            android:background="@color/color_1a000000" />
        <RelativeLayout
            android:id="@id/rl_fast_capture"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip">
            <TextView
                android:id="@id/tv_fast_capture"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20.0dip"
                android:gravity="center"
                android:text="@string/auto_save"
                android:textColor="@color/color_333333"
                android:textSize="13.0dip" />
